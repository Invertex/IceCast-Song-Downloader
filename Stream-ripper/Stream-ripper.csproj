<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>StreamRipper</RootNamespace>
    <AssemblyName>StreamRipper</AssemblyName>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Strem ripper with async event system</Description>
    <RepositoryUrl>https://github.com/Invertex/Stream-ripper</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Invertex/Stream-ripper</PackageProjectUrl>
    <AssemblyVersion>2.2.1</AssemblyVersion>
    <FileVersion>2.1.1</FileVersion>
    <Version>2.2.1</Version>
    <SignAssembly>false</SignAssembly>
    <Platforms>AnyCPU</Platforms>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="3.1.32" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="3.1.32" />
  </ItemGroup>
</Project>